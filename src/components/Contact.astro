---
import { siteConfig } from "../config";

// Get environment variables
const emailjsPublicKey = import.meta.env.PUBLIC_EMAILJS_PUBLIC_KEY || '';
const contactEmail = import.meta.env.PUBLIC_CONTACT_EMAIL || 'sarweshero@gmail.com';
---

<section id="contact" class="py-20 px-8 bg-gray-50">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Get In Touch
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Have a project in mind or want to discuss opportunities? I'd love to hear from you. 
        Send me a message and I'll get back to you as soon as possible.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-12 items-start">
      <!-- Contact Information -->
      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-semibold text-gray-900 mb-6">Contact Information</h3>
          
          <div class="space-y-4">
            <div class="flex items-center space-x-4">
              <div class="bg-blue-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500">Email</p>
                <a href={`mailto:${contactEmail}`} class="text-lg text-gray-900 hover:text-blue-600 transition-colors">
                  {contactEmail}
                </a>
              </div>
            </div>

            <div class="flex items-center space-x-4">
              <div class="bg-blue-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500">Location</p>
                <p class="text-lg text-gray-900">Coimbatore, India</p>
              </div>
            </div>

            <div class="flex items-center space-x-4">
              <div class="bg-blue-100 p-3 rounded-full">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2z"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500">Startup</p>
                <a href="https://xyndrix.tech" target="_blank" class="text-lg text-gray-900 hover:text-blue-600 transition-colors">
                  Xyndrix
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Social Links -->
        <div>
          <h3 class="text-xl font-semibold text-gray-900 mb-6">Connect With Me</h3>
          <div class="flex space-x-4">
            <a 
              href={siteConfig.social.linkedin} 
              target="_blank" 
              rel="noopener noreferrer"
              class="social-link bg-blue-600 text-white p-3 rounded-full hover:bg-blue-700 transition-colors"
              title="LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd"></path>
              </svg>
            </a>
            
            <a 
              href={siteConfig.social.github} 
              target="_blank" 
              rel="noopener noreferrer"
              class="social-link bg-gray-800 text-white p-3 rounded-full hover:bg-gray-900 transition-colors"
              title="GitHub"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
              </svg>
            </a>
            
            <a 
              href={siteConfig.social.twitter} 
              target="_blank" 
              rel="noopener noreferrer"
              class="social-link bg-sky-500 text-white p-3 rounded-full hover:bg-sky-600 transition-colors"
              title="Twitter/X"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-white p-8 rounded-2xl shadow-lg">
        <h3 class="text-xl font-semibold text-gray-900 mb-6">Send Me a Message</h3>
        
        <form id="contact-form" class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
              Full Name *
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
              placeholder="Your full name"
            />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              Email Address *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
              placeholder="your.email@example.com"
            />
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
              Subject *
            </label>
            <input
              type="text"
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
              placeholder="What's this about?"
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
              Message *
            </label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 resize-vertical"
              placeholder="Tell me about your project, idea, or just say hello..."
            ></textarea>
          </div>

          <button
            type="submit"
            id="submit-btn"
            class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200 font-medium flex items-center justify-center space-x-2"
          >
            <span id="submit-text">Send Message</span>
            <svg id="submit-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
            <svg id="loading-icon" class="w-5 h-5 animate-spin hidden" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
          </button>

          <!-- Success/Error Messages -->
          <div id="form-message" class="hidden p-4 rounded-lg"></div>
        </form>
      </div>
    </div>
  </div>
</section>

<script define:vars={{ emailjsPublicKey, contactEmail }}>
    // Load EmailJS
    (function(){
        if (emailjsPublicKey) {
            emailjs.init(emailjsPublicKey);
        }
    })();

    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('contact-form');
        const submitBtn = document.getElementById('submit-btn');
        const submitText = document.getElementById('submit-text');
        const submitIcon = document.getElementById('submit-icon');
        const loadingIcon = document.getElementById('loading-icon');
        const formMessage = document.getElementById('form-message');

        form?.addEventListener('submit', async function(e) {
            e.preventDefault();
            
            // Get form data
            const formData = new FormData(form);
            const templateParams = {
                from_name: formData.get('name'),
                from_email: formData.get('email'),
                subject: formData.get('subject'),
                message: formData.get('message'),
                to_email: contactEmail
            };

            // Show loading state
            submitBtn.disabled = true;
            submitText.textContent = 'Sending...';
            submitIcon.classList.add('hidden');
            loadingIcon.classList.remove('hidden');
            formMessage.classList.add('hidden');

            try {
                // Fallback to mailto since we're keeping it simple
                console.log('Using mailto for contact form');
                
                // Create mailto link
                const mailtoLink = `mailto:${contactEmail}?subject=${encodeURIComponent(templateParams.subject)}&body=${encodeURIComponent(`Name: ${templateParams.from_name}\nEmail: ${templateParams.from_email}\n\nMessage:\n${templateParams.message}`)}`;
                
                // Show success message
                showMessage('success', `Thank you for your message! Your default email client will open, or you can email me directly at ${contactEmail}`);
                
                // Open email client
                setTimeout(() => {
                    window.location.href = mailtoLink;
                }, 1000);
                
                form.reset();
                
            } catch (error) {
                console.error('Error sending message:', error);
                showMessage('error', `Sorry, there was an error. Please email me directly at ${contactEmail}`);
            }

            // Reset button state
            submitBtn.disabled = false;
            submitText.textContent = 'Send Message';
            submitIcon.classList.remove('hidden');
            loadingIcon.classList.add('hidden');
        });

        function showMessage(type, message) {
            formMessage.className = `p-4 rounded-lg ${type === 'success' 
                ? 'bg-green-100 text-green-800 border border-green-200' 
                : 'bg-red-100 text-red-800 border border-red-200'}`;
            formMessage.textContent = message;
            formMessage.classList.remove('hidden');
            
            // Hide message after 8 seconds for success, 10 for error
            setTimeout(() => {
                formMessage.classList.add('hidden');
            }, type === 'success' ? 8000 : 10000);
        }

        // Add input validation and styling
        const inputs = form.querySelectorAll('input, textarea');
        inputs.forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.classList.add('focused');
            });
            
            input.addEventListener('blur', function() {
                this.parentElement.classList.remove('focused');
                if (this.value.trim() !== '') {
                    this.classList.add('has-content');
                } else {
                    this.classList.remove('has-content');
                }
            });
            
            input.addEventListener('input', function() {
                if (this.checkValidity()) {
                    this.classList.remove('error');
                    this.classList.add('valid');
                } else {
                    this.classList.remove('valid');
                    this.classList.add('error');
                }
            });
        });
    });
</script>

<style>
  /* Enhanced form styling */
  .focused input,
  .focused textarea {
    border-color: #3b82f6;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }
  
  .has-content {
    border-color: #10b981;
  }
  
  .error {
    border-color: #ef4444 !important;
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1) !important;
  }
  
  .valid {
    border-color: #10b981;
  }
  
  /* Hover effects for form */
  #contact-form input:hover,
  #contact-form textarea:hover {
    border-color: #6b7280;
  }
  
  /* Button hover animation */
  #submit-btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 10px 20px rgba(59, 130, 246, 0.2);
  }
  
  /* Social links hover effects */
  .social-link {
    transform: translateY(0);
    transition: all 0.3s ease;
  }
  
  .social-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  }
</style>